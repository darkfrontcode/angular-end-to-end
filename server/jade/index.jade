doctype html
html(lang='en', ng-app='app')
    head
        meta(charset='UTF-8')
        base(href='/')
        title Angular
        link(rel='stylesheet', type='text/css', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css')
    body
        .container
            .center-block(ng-controller='friendsController')
                table.table.table-striped
                    thead
                        tr
                            td
                                h2.text-center Friends list
                    tbody
                        tr(ng-repeat='friend in friends')
                            td
                                contact-card(first-name='friend.first_name', last-name='friend.last_name') {{$index+1}}
        
        script(src='./app.js')
