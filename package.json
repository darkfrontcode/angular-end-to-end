{
    "name": "angular-end-to-end",
    "version": "1.0.0",
    "description": "",
    "main": "start.js",
    "scripts": {
        "start": "concurrently \"npm run open\" \"npm run development\" ",
        "open": "start chrome http://localhost:3000",
        "development": "node start",
        "production": "concurrently \"npm run open\" \"npm run production:set\" ",
        "production:set": "SET NODE_ENV=production&& node start",
        "webpack": "webpack --config ./server/webpack/production --progress --colors",
        "nodemon:w": "nodemon ./start",
        "clean": "rm -rf public/app.js public/main.css",
        "cucumber": "concurrently \"npm run production\" \"npm run cucumber:test\" ",
        "cucumber:test": "protractor ./server/cucumber/config",
        "protractor": "concurrently \"npm run production\" \"npm run protractor:test\" ",
        "protractor:test": "protractor ./server/protractor/config"
    },
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "angular": "^1.5.6",
        "angular-ui-router": "^0.3.0",
        "babel-core": "^6.9.0",
        "babel-loader": "^6.2.4",
        "babel-preset-es2015": "^6.9.0",
        "babel-preset-stage-0": "^6.5.0",
        "chai": "^3.5.0",
        "chai-as-promised": "^5.3.0",
        "concurrently": "^2.1.0",
        "cucumber": "^1.0.0",
        "express": "^4.13.4",
        "jade": "^1.11.0",
        "jquery": "^2.2.4",
        "protractor": "^3.3.0",
        "protractor-cucumber-framework": "^0.5.0",
        "webpack": "^1.13.1",
        "webpack-dev-middleware": "^1.6.1",
        "webpack-hot-middleware": "^2.10.0"
    }
}
